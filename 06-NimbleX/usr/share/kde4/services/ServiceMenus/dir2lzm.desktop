[Desktop Entry]
Type=Service
X-KDE-ServiceTypes=KonqPopupMenu/Plugin,inode/directory
Actions=DIR2lzm;
X-KDE-AuthorizeAction=shell_access

[Desktop Action DIR2lzm]
Name=Convert dir to LZM package
Icon=package_nimblex
Exec=(dir2lzm %d/%n %d/%n.lzm && kdialog --passivepopup "Package created in %d/%n.lzm" || kdialog --sorry "Package creation failed!")
